            </TabControl>
        </Grid>

        <Grid x:Name="tabTaiKhoan" Grid.Column="1" Visibility="Hidden">
            <!--Hiển thị nội dung phần tài khoản-->
            <GroupBox Header="Thông tin tài khoản" Margin="16">
                <StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <Label Width="150">Tên đăng nhập:</Label>
                        <TextBlock x:Name="txtTenDangNhap" FontWeight="Bold" IsEnabled="False"></TextBlock>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <Label Width="150">Tên hiển thị:</Label>
                        <TextBlock x:Name="txtTenHienThi" FontWeight="Bold" IsEnabled="False"></TextBlock>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <Label Width="150">Số điện thoại:</Label>
                        <TextBlock x:Name="txtSoDienThoai" FontWeight="Bold" IsEnabled="False"></TextBlock>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <Label Width="150">Chi nhánh làm việc:</Label>
                        <TextBlock x:Name="txtChiNhanh" FontWeight="Bold" IsEnabled="False">Full</TextBlock>
                    </StackPanel>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150"></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Grid Grid.Column="0">
                            <Button Style="{StaticResource MaterialDesignRaisedButton}" Width="120" Click="SuaTaiKhoan">
                                Sửa
                            </Button>
                        </Grid>
                        <Grid Grid.Column="1" HorizontalAlignment="Left">
                            <Button Style="{StaticResource MaterialDesignRaisedButton}" Width="120" Click="DoiMatKhau">
