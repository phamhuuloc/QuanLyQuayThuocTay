                                    </Grid>
                                </Grid>


                                <Grid Grid.Row="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="100"></ColumnDefinition>
                                        <ColumnDefinition Width="180"></ColumnDefinition>
                                    </Grid.ColumnDefinitions>
                                    <Grid Grid.Column="0" VerticalAlignment="Center">
                                        <Label>Ngày kết thúc:</Label>
                                    </Grid>
                                    <Grid Grid.Column="1" VerticalAlignment="Top" HorizontalAlignment="Left">
                                        <DatePicker x:Name="dtpNgayKetThucBaoCaoBanHang"
  Width="150"
  materialDesign:HintAssist.Hint="Ngày kết thúc"
  Style="{StaticResource MaterialDesignFloatingHintDatePicker}" />
                                    </Grid>
                                </Grid>


                                <Grid Grid.Row="2" HorizontalAlignment="Right">
                                    <Button Click="BaoCaoBanHang_Click"
    Style="{StaticResource MaterialDesignRaisedLightButton}"
    Width="100"
    ToolTip="Resource name: MaterialDesignRaisedLightButton">
                                        Lọc
                                    </Button>
                                </Grid>
                            </Grid>
                        </GroupBox>
                    </Border>
                </Grid>
            </Grid>
            <Grid Grid.Column="1">
                <!--Hiển thị báo cáo-->
                <GroupBox x:Name="groupboxBaoCao"  Header="Báo cáo - Tổng: 0 vnđ" Style="{DynamicResource MaterialDesignGroupBox}" Margin="16" materialDesign:ColorZoneAssist.Mode="Accent">
                    <ListView x:Name="lsvBaoCao">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="Tên Thuốc" Width="150" DisplayMemberBinding="{Binding TenThuoc}"/>
                                <GridViewColumn Header="SL" Width="50" DisplayMemberBinding="{Binding SoLuong}"/>
                                <GridViewColumn Header="Đơn vị" Width="90" DisplayMemberBinding="{Binding TenDonVi}"/>
                                <GridViewColumn Header="Giá" Width="120" DisplayMemberBinding="{Binding Gia}"/>
                                <GridViewColumn Header="Ngày" Width="120" DisplayMemberBinding="{Binding Ngay}"/>
                                <GridViewColumn Header="Thành tiền" Width="120" DisplayMemberBinding="{Binding ThanhTien}"/>
                            </GridView>
                        </ListView.View>
                    </ListView>
                </GroupBox>
            </Grid>
        </Grid>


        <!--Trang quản lý nhân viên-->
        <Grid x:Name="tabNhanVien" Grid.Column="1" Visibility="Hidden">
            <TabControl>
                <TabItem>
                    <TabItem.Header>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Danh Sách nhân Viên"/>
                        </StackPanel>

                    </TabItem.Header>
                    <!--Danh sách thuốc -->
                    <GroupBox Header="Danh sách nhân viên" Margin="16">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="50"></RowDefinition>
                                <RowDefinition Height="360"></RowDefinition>
                                <RowDefinition></RowDefinition>
                            </Grid.RowDefinitions>
                            <Grid Grid.Row="0">
                                <Label Content="Tìm kiếm người dùng:" Margin="0,0,18,0"/>
                                <TextBox x:Name="searchTextBox" Grid.Row="1"/>
                                <Button Content="Tìm kiếm" Grid.Row="1" Margin="5,0,0,0" HorizontalAlignment="Right" Click="SearchButton_Click"/>
                            </Grid>
                           <Grid Grid.Row="1">
                                <ListView x:Name="lsvNhanVien">
                                    <ListView.View>
                                        <GridView>
                                            <GridViewColumn Header="ID" DisplayMemberBinding="{Binding IdTaiKhoan}"/>
                                            <GridViewColumn Header="Tên Đăng Nhập" DisplayMemberBinding="{Binding TenDangNhap}" Width="100"/>
                                            <GridViewColumn Header="Tên Hiển Thị" DisplayMemberBinding="{Binding TenHienThi}" Width="150"/>
                                            <GridViewColumn Header="SĐT" DisplayMemberBinding="{Binding SoDienThoai}" Width="100"/>
                                            <GridViewColumn Header="CMND" DisplayMemberBinding="{Binding CMND}" Width="100"/>
                                            <GridViewColumn Header="Địa Chỉ" DisplayMemberBinding="{Binding DiaChi}" Width="200"/>
                                            <GridViewColumn Header="Chi Nhánh Làm Việc" DisplayMemberBinding="{Binding TenCuaHang}" Width="200"/>
                                            <GridViewColumn Header="Quyền" DisplayMemberBinding="{Binding VaiTro}" />

                                        </GridView>
                                    </ListView.View>
                                </ListView>
                            </Grid>
                            <Grid Grid.Row="2" Width="400" HorizontalAlignment="Left">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition></ColumnDefinition>
                                    <ColumnDefinition></ColumnDefinition>
                                    <ColumnDefinition></ColumnDefinition>
                                </Grid.ColumnDefinitions>
                                <Grid Grid.Column="0">
                                    <Button Style="{StaticResource MaterialDesignRaisedButton}" Width="100" ToolTip="Thêm" Click="ThemNhanVien" >
                                        Thêm
                                    </Button>
                                </Grid>
                                <Grid Grid.Column="1">
                                    <Button Style="{StaticResource MaterialDesignRaisedButton}" Width="100" ToolTip="Sửa" Click="SuaThongTinNhanVien">
                                        Sửa
                                    </Button>
                                </Grid>
                                <Grid Grid.Column="2">
                                    <Button Style="{StaticResource MaterialDesignRaisedButton}" Width="100" ToolTip="Xóa" Click="XoaNhanVien" >
                                        Xóa
                                    </Button>
                                </Grid>
                            </Grid>
                        </Grid>
                    </GroupBox>
                </TabItem>
